@page "{id:int?}"
@model Final.Pages.Designeri.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Designeri</h1>

<p>
    <a asp-page="Create">Adauga un designer nou</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Numele designerului
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DesignerData.Designeri)
        {
            string selectedRow = "";
            if (item.ID == Model.DesignerID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.NumeDesigner)
                </td>
                <td>
                    <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.DesignerData.Rochii != null)
{
    <h3>Rochii create de un designer</h3>
    <table class="table">

        @foreach (var item in Model.DesignerData.Designeri)
        {
            string selectedRow = "";
            if (item.ID == Model.DesignerID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">

                <td>
                    @{
                        foreach (var b in item.Rochii)
                        {

                            @b.Denumire @:-creata de @b.Designer.NumeDesigner

                            <br />
                        }
                    }
                </td>
            </tr>
        }
    </table>
}