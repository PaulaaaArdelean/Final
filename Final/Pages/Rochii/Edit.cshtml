@page
@model Final.Pages.Rochii.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rochie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Rochie.ID" />
            <div class="form-group">
                <label asp-for="Rochie.Denumire" class="control-label"></label>
                <input asp-for="Rochie.Denumire" class="form-control" />
                <span asp-validation-for="Rochie.Denumire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rochie.Pret" class="control-label"></label>
                <input asp-for="Rochie.Pret" class="form-control" />
                <span asp-validation-for="Rochie.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rochie.DesignerID" class="control-label">Nume Designer</label>
                <select asp-for="Rochie.DesignerID" class="form-control" asp-items="ViewBag.DesignerID">
                </select>
                <span asp-validation-for="Rochie.DesignerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rochie.Marime" class="control-label">Marimea </label>
                <select asp-for="Rochie.MarimeID" class="form-control" asp-items="ViewBag.MarimeID">
                </select>
                <span asp-validation-for="Rochie.MarimeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rochie.CategorieID" class="control-label">Categoria </label>
                <select asp-for="Rochie.CategorieID" class="form-control" asp-items="ViewBag.CategorieID">
                </select>
                <span asp-validation-for="Rochie.CategorieID" class="text-danger"></span>
            </div>
            <div class="form-group">
 <div class="table">
 <table>
 <tr>
                @{
                    int cnt = 0;
                    foreach (var cat in Model.AssignedCategoryDataList)
                    {
                        if (cnt++ % 3 == 0)
                        {
                            @:</tr><tr>
                        }
                        @:<td>
         <input type="checkbox"
     name="selectedCategories"
     value="@cat.AccesoriuID"
     @(Html.Raw(cat.Ales ? 
"checked=\"checked\"" : "")) />
                       // @cat.AccesoriuID
                        @: @cat.NumeAccesoriu
                        @:</td>
                    }
                    @:</tr>

                }
 </table>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

 </div>
 </div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
